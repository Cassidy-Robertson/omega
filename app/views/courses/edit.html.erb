<h2>Edit Course</h2>

<div class="col-md-6 col-md-offset-6">

<%= form_for(@course) do |f| %>

 <div class="field">
   <%= f.label :topic %><br />
   <%= f.text_field :topic %>
 </div>

 <div class="field">
   <%= f.label :description %> <br />
   <%= f.text_field :description %>
 </div>

 <div class="field">
   <%= f.label :date %><br />
   <%= f.date_field :date %>
 </div>

 <div class="field">
   <%= f.label :time %> <br />
   <%= f.time_field :time %>
 </div>

 <div class="field">
  <%= f.label :duration %><br />
  <%= f.number_field :duration, min: 0, step: 0.5  %>
</div>

<div class="field">
 <%= f.label :street %><br />
 <%= f.text_field :street %>
</div>

<div class="field">
 <%= f.label :city %><br />
 <%= f.text_field :city %>
</div>

<div class="field">
 <%= f.label :state %><br />
 <%= f.text_field :state %>
</div>

<div class="field">
 <%= f.label :zipcode %><br />
 <%= f.text_field :zipcode%>
</div>


<div class="field">
 <%= f.label :tag_list %><br />
 <%= f.text_field :tag_list%>
</div>
<%= f.submit "edit" %>
<% end %>

<%= link_to "Back", :back %>


</div>
