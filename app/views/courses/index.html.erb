<h1> Course Listings </h1>

<% @courses.each do |course| %>
  <h3><%= course.topic %> </h3>
  <%= button_to('View Course', course, method: :get, class: "btn btn-default btn-sm") %>

  <% if course.teacher == current_user %>
    <h3><%= button_to "delete", course,  data: { confirm: "Are you sure?" }, :method => :delete, class: "btn btn-danger btn-xs" %> </h3>

    <h3><%= button_to "edit", edit_course_path(course), :method => :get, class: "btn btn-danger btn-xs" %> </h3>
  <% end %>

<% end %>

